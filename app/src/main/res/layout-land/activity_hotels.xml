    <RelativeLayout
        android:id="@+id/hotelPiramide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/hotelVila"
        android:layout_below="@+id/hotelPaso">

        <ImageView
            android:id="@+id/hotelPiramideFoto"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:src="@drawable/hotel_piramide_salou" />
        <ImageView
            android:id="@+id/estrellasHotelPiramide"
            android:layout_width="70dp"
