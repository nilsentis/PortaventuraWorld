<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titolPlusB"
            android:fontFamily="casual"
            android:textAlignment="center"
            android:textSize="35sp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descPlusB"
            android:layout_marginHorizontal="20dp">
        </TextView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/web_icon"
                android:id="@+id/icoWebB">
            </ImageView>

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/telefon_icon"
                android:id="@+id/icoTelB"
                android:layout_toEndOf="@+id/icoWebB">
            </ImageView>

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/ubi_icon"
                android:id="@+id/icoUbiB"
                android:layout_toEndOf="@id/icoTelB">
            </ImageView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <ImageButton
                android:id="@+id/trip"
                android:layout_width="80dp"
                android:layout_height="92dp"
                android:layout_gravity="center"
                android:background="@drawable/tripadvisor_icon"
                android:layout_margin="10dp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:numStars="5"
                android:stepSize="0.5"
                android:isIndicator="false" />

            <EditText
                android:id="@+id/editTextComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Deixa el teu comentari..."
                android:layout_marginHorizontal="10dp"
                android:inputType="textMultiLine"
                android:lines="4" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:id="@+id/BenviarB"
                android:text="Enviar Ressenya"
                android:backgroundTint="@color/green"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>